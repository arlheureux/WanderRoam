# WanderRoam Environment Configuration
# Copy this file to .env and adjust values for your setup

# =============================================================================
# DATABASE
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=wanderroam
DB_USER=wanderroam
DB_PASSWORD=wanderroam_password

# =============================================================================
# SERVER
# =============================================================================
PORT=5000
NODE_ENV=production

# Timezone for date formatting (default: Europe/Paris)
TZ=Europe/Paris

# =============================================================================
# SECURITY
# =============================================================================
# IMPORTANT: Change this to a secure random string in production!
JWT_SECRET=wanderroam_secret_key_change_in_production

# =============================================================================
# REGISTRATION
# =============================================================================
# Set to 'false' to disable new user registration
ENABLE_REGISTRATION=true

# =============================================================================
# UPLOADS
# =============================================================================
UPLOAD_DIR=/app/uploads
