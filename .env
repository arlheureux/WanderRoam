# WanderRoam Environment Configuration

# =============================================================================
# DATABASE
# =============================================================================
# Command to generate random password: openssl rand -base64 24
DB_HOST=postgres
DB_PORT=5432
DB_NAME=wanderroam
DB_USER=wanderroam
DB_PASSWORD=wanderroam_password

# =============================================================================
# SERVER
# =============================================================================
PORT=5000
TZ=Europe/Paris

# =============================================================================
# SECURITY
# =============================================================================
# Command to generate JWT secret: openssl rand -hex 32
JWT_SECRET=wanderroam_secret_key_change_in_production

# =============================================================================
# REGISTRATION
# =============================================================================
# Set to 'false' to disable new user registration
ENABLE_REGISTRATION=true

# =============================================================================
# UPLOADS
# =============================================================================
UPLOAD_DIR=/app/uploads
